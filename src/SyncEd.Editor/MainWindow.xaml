<Window x:Class="SyncEd.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:editor="clr-namespace:SyncEd.Editor"
        Title="MainWindow" Height="350" Width="525"
        d:DataContext="{d:DesignInstance Type=editor:MainWindowViewModel}">
    <DockPanel>
        <Border DockPanel.Dock="Top" Margin="5 10 5 0" Padding="5">
            <DockPanel HorizontalAlignment="Left" Width="497">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock>Number of Editors:</TextBlock>
                    <TextBlock Margin="5 0 5 0" Text="{Binding NumberOfEditors, FallbackValue=0}"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <TextBox Text="{Binding DocumentName, FallbackValue=(Document Name)}" Width="110" Margin="0 0 5 0" />
                    <Button Padding="5 0 7 0">Connect</Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Margin="5" Padding="5">
            <TextBox Text="{Binding DocumentText}" />
        </Border>
    </DockPanel>
    
</Window>

    